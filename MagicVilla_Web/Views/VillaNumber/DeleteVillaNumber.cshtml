@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM


<form asp-action="DeleteVillaNumber" class="form-group">
    <br/>
    <div class="container border p-3 form-control">
        <h1 class="text-primary">Delete Villa</h1>
        <input hidden asp-for="VillaNumber.VillaNo"/>
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" readonly class="pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="VillaNumber.VillaNo" readonly class="form-control"/>
            </div>


            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" readonly class="pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10">
                <select asp-for="VillaNumber.VillaId" readonly class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa</option>

                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" readonly class="pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10">

                <textarea asp-for="VillaNumber.SpecialDetails" readonly class="form-control" rows="5"></textarea>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Delete" class="btn-success btn form-control"/>
            </div>

        </div>
    </div>
</form>

@section Scripts







{
    <partial name="_ValidationScriptsPartial"/>
}
